
@{
    ViewData["Title"] = "Qeydiyyat";
}

@model AccountIndexViewModel
@{
    ViewData["Title"] = "Giriş";
}

@*Intro*@
<partial name="_Breadcumb" model="ViewBag.Partial" />

<!-- login-signup section -->
<section id="login-signup" class="mt-20">
    <div class="container">
        <div class="row">
            <div class="contain-stack mt-20">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="header-panel">
                            <ul class="nav-tabs">
                                <li class="active"><a href="#tabs_1">Qeydiyyat</a></li>
                            </ul>
                        </div>
                        <div class="tab-content">

                            <div class="tab-panel" id="tabs_1">
                                <div class="row">
                                    <div class="col-md-12">
                                        <form asp-controller="Account" asp-action="Register" method="post" enctype="multipart/form-data">
                                            <div class="form-group">
                                                <div class="left-side">
                                                    <label for="userType">Qeydiyyat növü</label>
                                                </div>
                                                <div class="right-side">
                                                    <select id="userTypeId" asp-for="Register.UserTypeId" name="Register.UserTypeId" data-validation="required" data-validation-error-msg-required="Qeydiyyat növünü seçin!!!">
                                                        <option selected value="">Seçin</option>
                                                        @foreach (UserType item in ViewBag.UserTypes)
                                                        {
                                                            <option value="@item.UserTypeId">@item.Name</option>
                                                        }
                                                    </select>
                                                    <span class="text-danger" asp-validation-for="Register.UserTypeId"> </span>
                                                </div>
                                            </div>
                                            <div class="form-group d-none companyparam humanparam">
                                                <div class="left-side">
                                                    <label for="name">Ad</label>
                                                </div>
                                                <div class="right-side">
                                                    <input type="text" id="name" asp-for="Register.Name" placeholder="Ad"
                                                           data-validation="required, length"
                                                           data-validation-error-msg-required="Ad daxil edin!!!"
                                                           data-validation-length="3-50"
                                                           data-validation-error-msg-length="Minimum 3, Maksimum 50 hərf daxil etməlisiniz!!!" />
                                                    <span class="text-danger" asp-validation-for="Register.Name"></span>
                                                </div>
                                            </div>
                                            <div class="form-group d-none humanparam">
                                                <div class="left-side">
                                                    <label for="surname">Soyad</label>
                                                </div>
                                                <div class="right-side">
                                                    <input type="text" asp-for="Register.Surname" id="surname" placeholder="Soyad"
                                                           data-validation="required, length"
                                                           data-validation-error-msg-required="Soyadınızı daxil edin!!!"
                                                           data-validation-length="3-50"
                                                           data-validation-error-msg-length="Minimum 3, Maksimum 50 hərf daxil etməlisiniz!!!" />
                                                    <span class="text-danger" asp-validation-for="Register.Surname"></span>
                                                </div>
                                            </div>
                                            <div class="form-group d-none companyparam humanparam">
                                                <div class="left-side">
                                                    <label for="phone">Telefon</label>
                                                </div>
                                                <div class="right-side">
                                                    <input type="text" id="phone" asp-for="Register.PhoneNumber" placeholder="(___) ___ - ____"
                                                           data-validation="required, length"
                                                           data-validation-error-msg-required="Telefon nömrəsi daxil edin!"
                                                           data-validation-length="14-14"
                                                           data-validation-error-msg-length="Telefon nömrəsni düzgün daxil edin!!!" />
                                                    <span class="text-danger" asp-validation-for="Register.PhoneNumber"></span>
                                                </div>
                                            </div>
                                            <div class="form-group d-none companyparam humanparam">
                                                <div class="left-side">
                                                    <label for="Regemail">E-Poçt</label>
                                                </div>
                                                <div class="right-side">
                                                    <input type="text" id="Regemail" placeholder="E-poçt" asp-for="Register.Email"
                                                           data-validation="required, email"
                                                           data-validation-error-msg-required="E-poçt ünvanı daxil edin!!!"
                                                           data-validation-error-msg-email="E-poçt ünvanını düzgün qaydada daxil edin!!!" />
                                                    <span class="text-danger" asp-validation-for="Register.Email"> </span>
                                                </div>
                                            </div>
                                            <div class="form-group d-none companyparam humanparam">
                                                <div class="left-side">
                                                    <label for="Regpassword">Şifrə</label>
                                                </div>
                                                <div class="right-side">
                                                    <input type="password" name="Register.Password" asp-for="Register.Password" placeholder="Şifrə"
                                                           data-validation="required"
                                                           data-validation-error-msg-required="Şifrə daxil edin!!!" />
                                                    <span class="text-danger" asp-validation-for="Register.Password"> </span>
                                                </div>
                                            </div>
                                            <div class="form-group d-none companyparam humanparam">
                                                <div class="left-side">
                                                    <label for="Regrepassword" asp-for="Register.RePassword">Şifrənin təkrarı</label>
                                                </div>
                                                <div class="right-side">
                                                    <input type="password" asp-for="Register.RePassword" placeholder="Şifrəni təkrarı"
                                                           data-validation="required, confirmation"
                                                           data-validation-error-msg-required="Şifrəni təkrar daxil edin!!!"
                                                           data-validation-error-msg-confirmation="Şifrə təkrarlanmalıdır!!!"
                                                           data-validation-confirm="Register.Password" />

                                                    <span class="text-danger" asp-validation-for="Register.RePassword"> </span>
                                                </div>

                                            </div>
                                            <div class="right-side d-none companyparam humanparam">
                                                <button type="submit">Qeydiyyat</button>
                                            </div>

                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end of login-sgnup section -->

@section FormValidator{
    <script src="~/script/form-validator/jquery.form-validator.min.js"></script>
    <script src="~/script/form-validator/security.js"></script>
    <script src="~/script/form-validator/file.js"></script>
}
@section PhoneMask{
    <script src="~/script/phone-mask/jquery.browser.min.js"></script>
}
@section Scripts{

    <script>

        $(document).ready(function () {

           
            //PHONE MASK
            $("#phone").mask("(999) 999-9999");

            $("#phone").on("focus", function () {
                var last = $(this).val().substr($(this).val().indexOf("-") + 1);

                if (last.length == 5) {
                    var move = $(this).val().substr($(this).val().indexOf("-") + 1, 1);

                    var lastfour = last.substr(1, 4);

                    var first = $(this).val().substr(0, 9);

                    $(this).val(first + move + '-' + lastfour);
                }
            });
        });


    </script>
}
