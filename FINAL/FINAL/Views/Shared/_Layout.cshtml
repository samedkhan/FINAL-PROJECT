

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Arenda</title>
    <script src="https://kit.fontawesome.com/3da3c9c8f9.js" crossorigin="anonymous" SameSite="None"></script>
    <link rel="stylesheet" href="~/css/reset.css">
    <link rel="stylesheet" href="~/css/grid.css">
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true">
    @RenderSection("owlCss", required: false)
    @RenderSection("ConfirmCss", required: false)
    @RenderSection("NotificationCss", required: false)
    <script src="~/script/jquery.js"></script>
    @RenderSection("GoogleMap", required: false)
    @RenderSection("Filter", required: false)
    @RenderSection("FormValidator", required: false)
    @RenderSection("PhoneMask", required: false)
    @RenderSection("ConfirmJs", required: false)
    @RenderSection("NotificationJs", required: false)
    @RenderSection("preloaderScript", required: false)

</head>
<body>

    @RenderSection("preloader", required: false)


    <!-- header -->
    <header>
        <section id="header">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-12">
                        <div class="navigation-bar">
                            <div class="logo">
                                <a asp-controller="home" asp-action="index"><img src="~/img/logo/logo.png" alt="logo"></a>
                            </div>
                            <div class="menu">
                                <ul>
                                    <li class="main-menu"><a asp-controller="agency" asp-action="index">Agentliklər</a></li>
                                    <li class="main-menu" data-dropdown="true">
                                        <span>Satış</span>
                                        <ul class="submenu">
                                            @foreach (PropertySort item in ViewBag.PropertySorts)
                                            {
                                                <li><a asp-controller="add" asp-action="sale" asp-route-id="@item.PropertySortId">@item.PropertySortName</a></li>
                                            }
                                        </ul>
                                    </li>
                                    <li class="main-menu" data-dropdown="true">
                                        <span>Kirayə</span>
                                        <ul class="submenu">
                                            @foreach (PropertySort item in ViewBag.PropertySorts)
                                            {
                                                <li><a asp-controller="add" asp-action="rent" asp-route-id="@item.PropertySortId">@item.PropertySortName</a></li>
                                            }
                                        </ul>
                                    </li>
                                    <li class="main-menu"><a asp-controller="home" asp-action="about">Haqqımızda</a></li>
                                    <li class="main-menu"><a asp-controller="home" asp-action="contact">Əlaqə</a></li>
                                    <li class="main-menu" data-button="true" data-checked="true"><a asp-action="create" asp-controller="add"><i class="fas fa-plus"></i>ELAN YERLƏŞDİR</a></li>
                                </ul>

                            </div>
                            <div class="trigger">
                                <div class="top"></div>
                                <div class="middle"></div>
                                <div class="bottom"></div>
                            </div>
                            <div class="registration">
                                <ul>
                                    @if (Context.Request.Cookies["token"] != null)
                                    {
                                        <li class="main-menu" data-dropdown="true">

                                            <span>@ViewBag.UserName</span>

                                            <ul class="submenu">
                                                <li><a asp-controller="account" asp-action="cabinet">Şəxsi Kabinet</a></li>
                                                <li><a asp-controller="account" asp-action="settings">Tənzimləmələr</a></li>
                                                <li><a asp-controller="account" asp-action="logout">Çıxış Et</a></li>
                                            </ul>
                                        </li>


                                    }
                                    else
                                    {
                                        <li class="main-menu" data-button="true"><a asp-controller="account" asp-action="index">Şəxsi kabinet</a></li>
                                        @*<li class="main-menu" data-button="true"><a asp-controller="account" asp-action="register">Qeydiyyat</a></li>*@
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </header>
    <!-- end of header -->
   

    <main>
        @RenderBody()
    </main>

    <!-- footer -->
    <footer>
        <section id="footer" class="mt-20">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="footer-top">
                            <div class="left-side">
                                <div class="logo-side">
                                    <a asp-controller="home" asp-action="index"><img src="~/img/logo/logo.png" alt="logo"></a>
                                </div>
                            </div>
                            <div class="right-side">
                                <ul class="social-links">
                                    <li><a href="@ViewBag.Facebook"><i class="fi flaticon-facebook-logo"></i></a></li>
                                    <li><a href="@ViewBag.Twitter"><i class="fi flaticon-twitter"></i></a></li>
                                    <li><a href="@ViewBag.Linkedin"><i class="fi flaticon-linkedin"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="footer-bottom">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="subjects">
                                        <div class="title mb-10">
                                            <h2>Ümumi</h2>
                                        </div>
                                        <div class="contain">
                                            <ul>
                                                <li><a asp-controller="agency" asp-action="index">Agentliklər</a></li>
                                                <li><a asp-controller="home" asp-action="about">Haqqımızda</a></li>
                                                <li><a asp-controller="home" asp-action="contact">Əlaqə</a></li>
                                                <li><a asp-controller="Add" asp-action="Create">Elan yerləşdir</a></li>
                                            </ul>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-md-3">
                                    <div class="subjects">
                                        <div class="title mb-10">
                                            <h2>Satış</h2>
                                        </div>
                                        <div class="contain">
                                            <ul>
                                                @foreach (PropertySort item in ViewBag.PropertySorts)
                                                {
                                                    <li><a asp-controller="add" asp-action="sale" asp-route-id="@item.PropertySortId">@item.PropertySortName</a></li>
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="subjects">
                                        <div class="title mb-10">
                                            <h2>Kirayə</h2>
                                        </div>
                                        <div class="contain">
                                            <ul>
                                                @foreach (PropertySort item in ViewBag.PropertySorts)
                                                {
                                                    <li><a asp-controller="add" asp-action="rent" asp-route-id="@item.PropertySortId">@item.PropertySortName</a></li>
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="subjects">
                                        <div class="title mb-10">
                                            <h2>Əlaqə</h2>
                                        </div>
                                        <div class="contain">
                                            <ul>
                                                <li><i class="fas fa-map-marker-alt"></i> Qara Qarayev 126/89</li>
                                                <li><i class="fas fa-phone-alt"></i> (+99412) 376 92 36</li>
                                                <li><i class="fas fa-mobile-alt"></i> (+99455) 653 30 31</li>
                                                <li><i class="far fa-envelope"></i> samadakh@code.edu.az</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="footer-author">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="subjects author mt-10">
                                        <div class="title">
                                            <p>© 2020 Müəllif: Samed-Khan</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </footer>
    <!-- end of footer -->
</body>

</html>

<script src="~/script/main.js" asp-append-version="true"></script>

@RenderSection("owlScript", required: false)
@RenderSection("Scripts", required: false)

