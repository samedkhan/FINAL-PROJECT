
@{
    ViewData["Title"] = "Əlaqə";
}

@*Intro*@
<partial name="_Breadcumb" model="ViewBag.Partial" />

<!-- contact-section -->
<section id="contact" class="mt-20">
    <div class="container">
        <div class="row">
            <div class="contain-stack mt-20">
                <div class="row">
                    <div class="col-md-12">
                        <div class="contain-item">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="contain">
                                        <ul>
                                            <li><i class="fas fa-map-marker-alt"></i> Qara Qarayev 126/89, Bakı, Azərbaycan</li>
                                            <li><i class="fas fa-phone-alt"></i> (+99412) 376 92 36</li>
                                            <li><i class="fas fa-mobile-alt"></i> (+99455) 653 30 31</li>
                                            <li><i class="far fa-envelope"></i> samadakh@code.edu.az</li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <form action="post">
                                        <div class="form-group">
                                            <div class="left-side">
                                                <label for="name">Ad</label>
                                            </div>
                                            <div class="right-side">
                                                <input type="text" id="name" placeholder="Ad">
                                                <span class="text-danger"> </span>
                                            </div>

                                        </div>
                                        <div class="form-group">
                                            <div class="left-side">
                                                <label for="surname">Soyad</label>
                                            </div>
                                            <div class="right-side">
                                                <input type="text" id="surname" placeholder="Soyad">
                                                <span class="text-danger"> </span>
                                            </div>

                                        </div>
                                        <div class="form-group">
                                            <div class="left-side">
                                                <label for="email">E-Poçt</label>
                                            </div>
                                            <div class="right-side">
                                                <input type="text" id="email" placeholder="E-poçt">
                                                <span class="text-danger"> </span>
                                            </div>

                                        </div>
                                        <div class="form-group">
                                            <div class="left-side">
                                                <label for="message">Mesajınız</label>
                                            </div>
                                            <div class="right-side">
                                                <textarea type="text" id="message" placeholder="Ad" row="5"></textarea>
                                                <span class="text-danger"> </span>
                                            </div>

                                        </div>
                                        <button type="submit">Göndər</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end of contact-section -->
