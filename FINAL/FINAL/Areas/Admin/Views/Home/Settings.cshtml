@model APHomeIndexViewModel
@{
    ViewData["Title"] = "Sayta aid tənzimləmələr";
}

<!-- Begin Page Content -->
<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Tənzimləmələr</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <a class="btn btn-success float-right" asp-controller="Home" asp-action="Editsettings" asp-area="Admin" asp-route-id="@Model.setting.Id"><h6 class="m-0 font-weight-bold text-white"><i class="fas fa-pencil-alt mr-2"></i>Yenilə</h6></a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Ünvan</th>
                        <th>Telefon</th>
                        <th>Mobil</th>
                        <th>E-poçt</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>@Model.setting.LocalAddress</td>
                        <td>@Model.setting.PhoneNumber</td>
                        <td>@Model.setting.MobileNumber</td>
                        <td>@Model.setting.Email</td>
                    </tr>
                </tbody>
            </table>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Facebook</th>
                        <th>Twitter</th>
                        <th>Linkedin</th>
                        <th>Logo</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>@Model.setting.FacebookAddress</td>
                        <td>@Model.setting.TwitterAdress</td>
                        <td>@Model.setting.LinkedinAddress</td>
                        <td>@Model.setting.MainLogo</td>
                    </tr>
                </tbody>
            </table>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Haqqında</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>@Html.Raw(Model.setting.About)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- /.container-fluid -->

@section TableCss{
    <!-- Custom styles for this page -->
    <link href="~/admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

@section TableScript{
    <!-- Page level plugins -->
    @*<script src="~/admin/vendor/datatables/jquery.dataTables.min.js"></script>*@
    <script src="~/admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/admin/js/demo/datatables-demo.js"></script>
}

