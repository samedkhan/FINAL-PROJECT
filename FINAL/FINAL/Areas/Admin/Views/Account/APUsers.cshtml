@model APAccountIndexViewModel
@{
    ViewData["Title"] = "İstifadəçilər";
}


<!-- Begin Page Content -->
<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Istifadəçilər</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <a class="btn btn-success float-right" asp-controller="Account" asp-action="Create" asp-area="Admin"><h6 class="m-0 font-weight-bold text-white"><i class="fas fa-plus mr-2"></i>Əlavə et</h6></a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Ad</th>
                        <th>E-poçt</th>
                        <th>Şifrə</th>
                        <th>Növ</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (APuser user in Model.APUsers)
                    {
                        <tr>
                            <td>@user.Nickname</td>
                            <td>@user.Email</td>
                            <td>@user.Password</td>
                            <td>@user.Status</td>
                            <td>
                                <a class="text-warning mr-3" asp-controller="Account" asp-action="Edit" asp-area="Admin" asp-route-id="@user.APUserId"><i class="fas fa-pencil-alt"></i></a>

                                <a class="text-danger" asp-controller="Account" asp-action="Remove" asp-area="Admin" asp-route-id="@user.APUserId"><i class="fa fa-trash" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- /.container-fluid -->

@section TableCss{
    <!-- Custom styles for this page -->
    <link href="~/admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

@section TableScript{
    <!-- Page level plugins -->
    <script src="~/admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/admin/js/demo/datatables-demo.js"></script>
}


