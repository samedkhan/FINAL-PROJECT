@model APAccountIndexViewModel
@{
    ViewData["Title"] = "İstifadəçi yaratmaq";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Yeni istifadəçi yarat</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <a class="btn btn-success float-right" asp-controller="Account" asp-action="Create" asp-area="Admin"><h6 class="m-0 font-weight-bold text-white"><i class="fas fa-plus mr-2"></i>Əlavə et</h6></a>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="p-5">
                    <form class="user" asp-controller="Account" asp-action="Create" asp-area="Admin" method="post">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Növü</label>
                            <div class="col-sm-9">
                                <select class="form-control" placeholder="Növ" asp-for="Create.isAdmin">
                                    <option value="true">Administrator</option>
                                    <option value="false">Moderator</option>
                                </select>
                                <span class="text-danger" asp-validation-for="Create.isAdmin"> </span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Ad</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" placeholder="Ad" asp-for="Create.Name">
                                <span class="text-danger" asp-validation-for="Create.Name"> </span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">E-Poçt</label>
                            <div class="col-sm-9">
                                <input type="email" class="form-control" placeholder="E-poçt" asp-for="Create.Email">
                                <span class="text-danger" asp-validation-for="Create.Email"> </span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Şifrə</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" placeholder="Şifrə" asp-for="Create.Password">
                                <span class="text-danger" asp-validation-for="Create.Password"> </span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-9 offset-sm-3">
                                <button class="btn btn-success btn-block" type="submit"><i class="fas fa-plus mr-2"></i>Əlavə et</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

